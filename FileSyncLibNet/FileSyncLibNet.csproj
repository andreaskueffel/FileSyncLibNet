<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Title>A file / directory sync library for .NET</Title>
	<Authors>Andreas KÃ¼ffel</Authors>
	<Copyright>2023</Copyright>
    <PackageProjectUrl>https://github.com/andreaskueffel/FileSyncLibNet</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/andreaskueffel/FileSyncLibNet</RepositoryUrl>
    <PackageTags>sync;backup;filesync;foldersync;dirsync;rsync;robocopy</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
